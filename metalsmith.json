{
  "metadata": {
    "title": "Kalastatic",
    "description": "Static site framework for prototyping and building out CMS-less websites at Kalamuna",
    "nav": [
      {
        "name": "About",
        "title": "About Us",
        "url": "/about"
      },
      {
        "name": "Team",
        "title": "Find out about our team",
        "url": "/team"
      },
      {
        "name": "News",
        "title": "Read the news, it's important",
        "url": "/news"
      },
      {
        "name": "Contact",
        "title": "Contact us about anything at all!",
        "url": "/contact"
      }
    ]
  },
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "pattern": "collections/articles/*.md",
        "sortBy": "order"
      },
      "team": {
        "pattern": "collections/team/*.md",
        "sortBy": "order"
      },
      "news": {
        "pattern": "collections/news/*.md",
        "sortBy": "order"
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":url"
    },
    "metalsmith-swig-helpers": {},
    "metalsmith-templates": {
      "engine": "swig"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "includePaths": [
        "src/styles",
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/fontawesome/scss/"
      ]
    },
    "metalsmith-concat": {
      "files": "js/**/*.js",
      "output": "js/scripts.js"
    }
  }
}
