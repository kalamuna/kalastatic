{
  "metadata": {
    "title": "Kalastatic",
    "description": "Static site framework for prototyping and building out CMS-less websites at Kalamuna"
  },
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "pattern": "collections/articles/*.md",
        "sortBy": "order"
      },
      "team": {
        "pattern": "collections/team/*.md",
        "sortBy": "order"
      },
      "news": {
        "pattern": "collections/news/*.md"
      },
      "carouselItems": {
        "pattern": "collections/carousel/*.md",
        "sortBy": "order"
      }
    },
    "metalsmith-metadata": {
      "config": "config.yaml"
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":url"
    },
    "metalsmith-swig-helpers": {},
    "metalsmith-templates": {
      "engine": "swig"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "includePaths": [
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/fontawesome/scss/"
      ]
    },
    "metalsmith-concat": {
      "files": [
        "vendor/jquery/dist/jquery.min.js",
        "vendor/matchHeight/jquery.matchHeight.js",
        "vendor/holderjs/holder.js",
        "vendor/bootstrap-sass-twbs/assets/javascripts/bootstrap.js",
        "js/kala_utils.js",
        "js/about.js",
        "js/global.js"
      ],
      "output": "js/scripts.js"
    }
  }
}
